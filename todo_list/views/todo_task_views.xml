<odoo>
    <record id="view_todo_task_list" model="ir.ui.view">
        <field name="name">todo.task.list</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="priority"/>
                <field name="state" widget="statusbar" statusbar_visible="new,in_progress,done"/>
                <field name="category_id"/>
                <field name="due_date"/>
                <field name="progress"/>
                <field name="tag_names"/>
            </list>
        </field>
    </record>

    <record id="view_todo_task_form" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_done"
                            type="object"
                            string="Mark as Done"
                            class="btn-primary"
                            invisible="is_done == True"/> 
                    <button name="unlink"
                            type="object"
                            string="Delete"
                            class="btn-danger"
                            confirm="Are you sure you want to delete this task?"
                            invisible="is_done == True"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="priority"/>
                        <field name="is_done"/>
                        <field name="category_id" can_create="false" can_write="false"/>
                        <field name="progress"/>
                    </group>
                    
                    <group string="Scheduling &amp; Time"> 
                        <field name="start_date"/>
                        <field name="due_date"/>
                        <field name="estimated_hours" widget="float_time" placeholder="H:MM (e.g., 9:20)"/> 
                        <field name="tag_ids" widget="many2many_tags" can_create="false" can_write="false"/>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_todo_task_kanban" model="ir.ui.view">
        <field name="name">todo.task.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" group_disable_sort="true" group_draggable="false">
                <field name="is_done"/>
                <field name="state" type="state"/> 
                <field name="priority"/>
                <field name="due_date"/>
                <field name="progress"/>
                <field name="tag_ids"/>

                <templates>
                    <t t-name="card"> 
                        <div class="oe_kanban_global_click p-3 rounded-lg shadow-sm">

                            <div class="d-flex justify-content-between">
                                <strong class="o_kanban_record_title text-truncate mb-1 me-2">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.priority.raw_value == 'high'"
                                     t-att-title="'Priority: High'"
                                     class="o_kanban_footer_right text-danger">
                                    <i class="fa fa-exclamation-triangle"/>
                                </div>
                            </div>

                            <div class="o_kanban_record_body">
                                
                                <div class="small text-uppercase fw-bold text-muted mt-2 mb-1 border-bottom">
                                    Scheduling
                                </div>

                                <div class="mb-2 small text-muted">
                                    <i class="fa fa-calendar me-1"/>
                                    **Due Date:** <field name="due_date"/>
                                </div>

                                <field name="tag_ids" widget="many2many_tags"/>

                                <div t-if="record.progress.raw_value &lt; 100" class="mt-2">
                                    <div class="progress" style="height: 5px;">
                                        <div t-attf-class="progress-bar bg-info"
                                             role="progressbar"
                                             t-att-style="'width:' + record.progress.value + '%;'"
                                             aria-valuenow="record.progress.raw_value"
                                             aria-valuemin="0"
                                             aria-valuemax="100"/>
                                    </div>
                                    <span class="small text-muted"><field name="progress"/>% Complete</span>
                                </div>

                                <div t-attf-class="text-uppercase small mt-2 text-{{record.state.raw_value === 'done' ? 'success' : record.state.raw_value === 'in_progress' ? 'primary' : 'muted'}}">
                                    Status: <field name="state"/>
                                </div>
                            </div>

                            </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_todo_task_calendar" model="ir.ui.view">
        <field name="name">todo.task.calendar</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <calendar string="To-Do Calendar" date_start="due_date">
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
    
    <record id="view_todo_category_list" model="ir.ui.view">
        <field name="name">todo.category.list</field>
        <field name="model">todo.category</field>
        <field name="arch" type="xml">
            <list string="Task Categories">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_todo_category_form" model="ir.ui.view">
        <field name="name">todo.category.form</field>
        <field name="model">todo.category</field>
        <field name="arch" type="xml">
            <form string="Task Category">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_todo_tag_list" model="ir.ui.view">
        <field name="name">todo.tag.list</field>
        <field name="model">todo.tag</field>
        <field name="arch" type="xml">
            <list string="Task Tags">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_todo_tag_form" model="ir.ui.view">
        <field name="name">todo.tag.form</field>
        <field name="model">todo.tag</field>
        <field name="arch" type="xml">
            <form string="Task Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">To-Do Task</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">list,form,kanban,calendar</field>
    </record>
    
    <record id="todo_category_action" model="ir.actions.act_window">
        <field name="name">Task Categories</field>
        <field name="res_model">todo.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="todo_tag_action" model="ir.actions.act_window">
        <field name="name">Task Tags</field>
        <field name="res_model">todo.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="todo_task_menu_main" name="To-Do List"/>
    <menuitem id="todo_task_menu" name="Tasks" parent="todo_task_menu_main" action="todo_task_action" sequence="10"/>
    <menuitem id="todo_task_menu_config" name="Configuration" parent="todo_task_menu_main" sequence="100"/>
    <menuitem id="todo_category_menu" name="Categories" parent="todo_task_menu_config" action="todo_category_action" sequence="10"/>
    <menuitem id="todo_tag_menu" name="Tags" parent="todo_task_menu_config" action="todo_tag_action" sequence="20"/>
</odoo>