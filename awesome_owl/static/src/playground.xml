<templates xml:space="preserve">
    <t t-name="awesome_owl.Playground"> 
        <div class="p-3">
            <h1>Playground: To-Do List, Cards, and Sum of Counters</h1>
            
            <TodoList/> 

            <hr/>
            
            <h2>Card with Safe HTML (Validation Passed)</h2>
            <Card title="'Card with Markup'" content="state.safeHtml" />

            <h2>Card with Unsafe HTML (Validation Passed)</h2>
            <Card title="'Card without Markup'" content="state.unsafeHtml" />

            <hr/>
            
            <h2>Counters Section</h2>
            <p class="h4">Total Sum of Counters: <t t-esc="state.sum"/></p>

            <Counter onChange="incrementSum"/>
            <Counter onChange="incrementSum"/>
            
        </div>
    </t>
</templates>