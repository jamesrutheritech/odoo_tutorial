<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_tag_view_list" model="ir.ui.view">
        <field name="name">x_estate.property.tag.list</field>
        <field name="model">x_estate.property.tag</field> <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color"/>
            </list>
        </field>
    </record>

    <record id="estate_property_tag_view_form" model="ir.ui.view">
        <field name="name">x_estate.property.tag.form</field>
        <field name="model">x_estate.property.tag</field> <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">x_estate.property.tag</field> <field name="view_mode">list,form</field>
    </record>

    <menuitem id="estate_property_tag_menu"
              name="Property Tags"
              action="estate_property_tag_action"
              parent="menu_root" 
              sequence="20"/>
</odoo>