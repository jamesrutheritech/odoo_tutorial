<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'accepted'" 
                       decoration-danger="status == 'refused'"/>
                <button name="action_accept" type="object" string="Accept" icon="fa-check" 
                        invisible="status in ['accepted', 'refused']"/>
                <button name="action_refuse" type="object" string="Refuse" icon="fa-times" 
                        invisible="status in ['accepted', 'refused']"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" 
                           statusbar_visible="accepted,refused"/>
                    <button name="action_accept" type="object" string="Accept Offer" class="oe_highlight" 
                            invisible="status in ['accepted', 'refused']"/>
                    <button name="action_refuse" type="object" string="Refuse Offer" 
                            invisible="status in ['accepted', 'refused']"/>
                </header>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="property_id" readonly="1"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>