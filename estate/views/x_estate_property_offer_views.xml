<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="x_estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">x_estate.property.offer.list</field>
        <field name="model">x_estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="x_price"/>
                <field name="x_partner_id"/>
                <field name="x_status"/>
            </list>
        </field>
    </record>

    <record id="x_estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">x_estate.property.offer.form</field>
        <field name="model">x_estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="x_price"/>
                        <field name="x_partner_id"/>
                        <field name="x_status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_property_offer_accept" model="ir.actions.server">
        <field name="name">Accept Offer</field>
        <field name="model_id" ref="estate.model_x_estate_property_offer"/>
        <field name="binding_model_id" ref="estate.model_x_estate_property_offer"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            # The records variable contains the offers selected by the user
            for offer in records:
                offer.action_accept_offer()
        </field>
    </record>
</odoo>