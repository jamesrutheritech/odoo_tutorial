<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Real Estate / Agent</field>
        </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Real Estate / Manager</field>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
        <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/> 
    </record>

    <record id="estate_property_rule_company" model="ir.rule">
        <field name="name">Estate Property: Multi-company access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="global" eval="True"/> <field name="domain_force">
            [
                '|',
                    ('company_id', '=', False),
                    ('company_id', 'in', company_ids) 
            ]
        </field>
    </record>

    <record id="estate_property_rule_user" model="ir.rule">
        <field name="name">Estate Property: Agent can only see their properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">
            [
                '|',
                    ('salesperson_id', '=', user.id), 
                    ('salesperson_id', '=', False)
            ]
        </field>
    </record>

    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">Estate Property: Manager sees all properties (Bypass)</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field> </record>


    <menuitem id="estate_settings_menu_root" 
              name="Configuration" 
              parent="estate_menu_root" 
              sequence="100" 
              groups="estate.estate_group_manager"/>

    <menuitem id="estate_property_type_menu_action" 
              name="Property Types" 
              action="estate_property_type_action" 
              parent="estate_settings_menu_root"/> <menuitem id="estate_property_tag_menu_action" 
              name="Property Tags" 
              action="estate_property_tag_action" 
              parent="estate_settings_menu_root"/> </odoo>