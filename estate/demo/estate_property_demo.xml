<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="demo_property_1" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2026-02-02</field> 
        <field name="expected_price">1600000.00</field>
        <field name="selling_price">1500001.00</field> <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage" eval="True"/>
        <field name="garden" eval="True"/>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="property_type_residential"/>
    </record>

    <record id="demo_property_2" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">canceled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000.00</field>
        <field name="selling_price">120000.00</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage" eval="False"/>
        <field name="garden" eval="False"/>
        <field name="property_type_id" ref="property_type_residential"/>
    </record>

    <record id="demo_offer_1" model="estate.property.offer">
        <field name="property_id" ref="demo_property_1"/>
        <field name="partner_id" ref="base.res_partner_azure_interior"/>
        <field name="price">10000.00</field>
        <field name="validity">14</field>
        <field name="create_date" eval="(datetime.now() - relativedelta(days=10))"/>
    </record>

    <record id="demo_offer_2" model="estate.property.offer">
        <field name="property_id" ref="demo_property_1"/>
        <field name="partner_id" ref="base.res_partner_azure_interior"/>
        <field name="price">1500000.00</field>
        <field name="validity">14</field>
        <field name="create_date" eval="(datetime.now() - relativedelta(days=5))"/>
    </record>

    <record id="demo_offer_3" model="estate.property.offer">
        <field name="property_id" ref="demo_property_1"/>
        <field name="partner_id" ref="base.res_partner_deco_addict"/>
        <field name="price">1500001.00</field>
        <field name="validity">14</field>
        <field name="create_date" eval="(datetime.now() - relativedelta(days=1))"/>
    </record>

    <function model="estate.property.offer" name="action_accept">
        <value eval="[ref('demo_offer_3')]"/>
    </function>

    <function model="estate.property.offer" name="action_refuse">
        <value eval="[ref('demo_offer_1'), ref('demo_offer_2')]"/>
    </function>

    <record id="demo_property_3" model="estate.property">
        <field name="name">Newly Built Condo with Offers (Command)</field>
        <field name="state">new</field>
        <field name="description">A modern apartment in the city center</field>
        <field name="postcode">67890</field>
        <field name="date_availability" eval="(datetime.now() + relativedelta(days=30)).strftime('%Y-%m-%d')"/>
        <field name="expected_price">450000.00</field>
        <field name="bedrooms">3</field>
        <field name="living_area">85</field>
        <field name="facades">2</field>
        <field name="garage" eval="True"/>
        <field name="garden" eval="False"/>
        <field name="property_type_id" ref="property_type_residential"/>
        
        <field name="offer_ids" eval="[
            Command.create({
                'partner_id': ref('base.res_partner_agrolait'),
                'price': 420000.00,
                'validity': 7,
                'create_date': (datetime.now() - relativedelta(days=3)),
            }),
            Command.create({
                'partner_id': ref('base.res_partner_deco_addict'),
                'price': 440000.00,
                'validity': 10,
                'create_date': datetime.now(),
            }),
        ]"/>
    </record>
</odoo>